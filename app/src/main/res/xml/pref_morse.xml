<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="550"
        android:inputType="number"
        android:key="morse_pitch"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Morse Pitch" />

    <EditTextPreference
        android:defaultValue="SID"
        android:inputType="text"
        android:key="twilio_sid"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Twilio Account SID" />

    <EditTextPreference
        android:defaultValue="Tok"
        android:inputType="text"
        android:key="twilio_token"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Twilio Auth Token" />

    <EditTextPreference
        android:defaultValue="Num"
        android:inputType="text"
        android:key="twilio_num"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Twilio from Number" />


</PreferenceScreen>
